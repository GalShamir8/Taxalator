<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AppBar"
    android:background="@color/app_background"
    tools:showIn="@layout/activity_base">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:id="@+id/bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/ic_undo"
            android:layout_weight="0.1"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:paddingLeft="100dp"
                >
                <ImageView
                    android:id="@+id/bar_bar_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:src="@drawable/taxalator_icon"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/splash_LBL_title"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:text="@string/app_name"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        <ImageView
            android:id="@+id/bar_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_setting"
            android:layout_weight="0.1"
            />

    </LinearLayout>

</RelativeLayout>